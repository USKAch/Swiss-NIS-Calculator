<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:loc="using:NIS.Desktop.Localization"
        xmlns:vm="using:NIS.Desktop.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="NIS.Desktop.MainWindow"
        x:DataType="vm:MainShellViewModel"
        Title="{Binding WindowTitle}"
        Width="1500" Height="880"
        MinWidth="1330" MinHeight="560">

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}"/>
    </Window.KeyBindings>

    <ui:NavigationView x:Name="NavView"
                       PaneDisplayMode="Left"
                       IsSettingsVisible="False"
                       IsPaneOpen="True"
                       OpenPaneLength="220"
                       SelectionChanged="OnNavigationSelectionChanged">

        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="{Binding Projects, Source={x:Static loc:Strings.Instance}}" Tag="Home">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Home"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding NewProject, Source={x:Static loc:Strings.Instance}}" Tag="NewProject">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Add"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding MasterData, Source={x:Static loc:Strings.Instance}}" Tag="MasterData">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Library"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding CalculateAll, Source={x:Static loc:Strings.Instance}}" Tag="Calculate" IsEnabled="{Binding HasProject}">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Calculator"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding ExportReport, Source={x:Static loc:Strings.Instance}}" Tag="CreateReport" IsEnabled="{Binding HasProject}">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Share"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding ExportPdf, Source={x:Static loc:Strings.Instance}}" Tag="ExportPdf" IsEnabled="{Binding HasProject}">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Document"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding ImportProject, Source={x:Static loc:Strings.Instance}}" Tag="ImportProject">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="OpenFolder"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding ExportProject, Source={x:Static loc:Strings.Instance}}" Tag="ExportProject" IsEnabled="{Binding HasProject}">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Save"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.MenuItems>

        <ui:NavigationView.FooterMenuItems>
            <ui:NavigationViewItem Content="{Binding Settings, Source={x:Static loc:Strings.Instance}}" Tag="Settings">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Setting"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="{Binding Factory, Source={x:Static loc:Strings.Instance}}" Tag="Factory">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Admin"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.FooterMenuItems>

        <ui:NavigationView.PaneFooter>
            <StackPanel Margin="12,8,12,12" Spacing="2">
                <TextBlock Text="Swiss NIS Calculator v1.0"
                           FontSize="10" Opacity="0.5"/>
                <TextBlock Text="HB9BLA / USKA"
                           FontSize="10" Opacity="0.5"/>
            </StackPanel>
        </ui:NavigationView.PaneFooter>

        <!-- Content area with breadcrumb header -->
        <Grid RowDefinitions="Auto,*">
            <!-- Breadcrumb Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    Padding="20,12"
                    IsVisible="{Binding Breadcrumb, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding Breadcrumb}"
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </Border>

            <!-- Main Content -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="10"/>
        </Grid>

    </ui:NavigationView>
</Window>
