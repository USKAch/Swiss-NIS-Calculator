<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="900"
             x:Class="NIS.Desktop.Views.ConfigurationEditorView"
             x:DataType="vm:ConfigurationEditorViewModel">

    <Design.DataContext>
        <vm:ConfigurationEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <TextBlock Text="{Binding HeaderText}" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="20" Margin="0,0,0,20">

                <!-- Antenna Section (first, most important) -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding Antenna, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*,Auto,Auto" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="{Binding Antenna, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Antennas}"
                                      SelectedItem="{Binding SelectedAntenna}" HorizontalAlignment="Stretch"
                                      IsTextSearchEnabled="True"
                                      PlaceholderText="{Binding SelectAntenna, Source={x:Static loc:Strings.Instance}}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditAntennaCommand}"
                                    IsEnabled="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="3" Content="{Binding New, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddAntennaCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>

                            <TextBlock Grid.Row="1" Text="{Binding Height, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding HeightMeters}" ShowButtonSpinner="False"
                                               Minimum="0" Maximum="100" Increment="0.5" Width="100"/>
                                <TextBlock Text="m" VerticalAlignment="Center"/>
                            </StackPanel>

                        </Grid>

                        <!-- Antenna Bands Display -->
                        <Border Background="White" CornerRadius="4" Padding="10" Margin="0,8,0,0"
                                IsVisible="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="{Binding FrequencyBands, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="12"/>
                                <ItemsControl ItemsSource="{Binding SelectedAntenna.Bands}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F8F8" CornerRadius="3" Padding="8,4" Margin="0,2">
                                                <Grid ColumnDefinitions="80,80,*">
                                                    <TextBlock Text="{Binding FrequencyMHz, StringFormat='{}{0} MHz'}" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding GainDbi, StringFormat='{}{0:F1} dBi'}" Opacity="0.6"/>
                                                    <TextBlock Grid.Column="2" FontSize="10" Opacity="0.5"
                                                               Text="{Binding Pattern, Converter={x:Static vm:PatternConverter.Instance}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Transmitter Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding Transmitter, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <!-- Radio -->
                        <Grid ColumnDefinitions="100,*,Auto,Auto" RowDefinitions="Auto" ColumnSpacing="10">
                            <TextBlock Text="{Binding Radio, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Radios}"
                                      SelectedItem="{Binding SelectedRadio}" HorizontalAlignment="Stretch"
                                      IsTextSearchEnabled="True"
                                      PlaceholderText="{Binding SelectRadio, Source={x:Static loc:Strings.Instance}}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1} ({2}W)">
                                                    <Binding Path="Manufacturer"/>
                                                    <Binding Path="Model"/>
                                                    <Binding Path="MaxPowerWatts"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditRadioCommand}"
                                    IsEnabled="{Binding SelectedRadio, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="3" Content="{Binding New, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddRadioCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>
                        </Grid>

                        <!-- Linear (optional) -->
                        <CheckBox Content="{Binding UseLinearAmplifier, Source={x:Static loc:Strings.Instance}}" IsChecked="{Binding HasLinear}"/>
                        <Grid ColumnDefinitions="100,*,*" IsVisible="{Binding HasLinear}" ColumnSpacing="10">
                            <TextBlock Text="{Binding Linear, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding LinearManufacturer}" Watermark="{Binding Manufacturer, Source={x:Static loc:Strings.Instance}}"/>
                            <TextBox Grid.Column="2" Text="{Binding LinearModel}" Watermark="{Binding Model, Source={x:Static loc:Strings.Instance}}"/>
                        </Grid>

                        <!-- Power -->
                        <Grid ColumnDefinitions="100,150,Auto" ColumnSpacing="10">
                            <TextBlock Text="{Binding Power, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <NumericUpDown Grid.Column="1" Value="{Binding PowerWatts}" ShowButtonSpinner="False"
                                           Minimum="1" Maximum="10000" Increment="10" Width="100"/>
                            <TextBlock Grid.Column="2" Text="W" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Feed Line Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding FeedLine, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="{Binding Cable, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Cables}"
                                      SelectedItem="{Binding SelectedCable}" HorizontalAlignment="Stretch"
                                      IsTextSearchEnabled="True"
                                      PlaceholderText="{Binding SelectCable, Source={x:Static loc:Strings.Instance}}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditCableCommand}"
                                    IsEnabled="{Binding SelectedCable, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="3" Content="{Binding New, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddCableCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>

                            <TextBlock Grid.Row="1" Text="{Binding CableLength, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding CableLengthMeters}" ShowButtonSpinner="False"
                                               Minimum="0" Maximum="500" Increment="1" Width="100"/>
                                <TextBlock Text="m" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="{Binding AdditionalLoss, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding AdditionalLossDb}" ShowButtonSpinner="False"
                                               Minimum="0" Maximum="20" Increment="0.5" Width="100"/>
                                <TextBlock Text="dB" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Text="{Binding LossDescription, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding AdditionalLossDescription}"
                                     Watermark="{Binding AdditionalLossExample, Source={x:Static loc:Strings.Instance}}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Operating Parameters Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding OperatingParameters, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="{Binding Modulation, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ModulationOptions}"
                                      SelectedIndex="{Binding SelectedModulationIndex}"
                                      HorizontalAlignment="Left" Width="150"/>

                            <TextBlock Grid.Row="1" Text="{Binding ActivityFactor, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding ActivityFactor}" ShowButtonSpinner="False"
                                               Minimum="0" Maximum="1" Increment="0.1" Width="100"
                                               FormatString="0.0"/>
                                <TextBlock Text="{Binding ActivityFactorHint, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" Opacity="0.6"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="{Binding ParametersApplyToAllBands, Source={x:Static loc:Strings.Instance}}"
                                   Opacity="0.6" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- OKA Section -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding EvaluationPoint, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <!-- OKA Name/Dropdown -->
                        <Grid ColumnDefinitions="100,3*,Auto" ColumnSpacing="10">
                            <TextBlock Text="{Binding OkaNameLabel, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Okas}"
                                      SelectedItem="{Binding SelectedOka}"
                                      IsEditable="True"
                                      Text="{Binding OkaName}"
                                      PlaceholderText="{Binding SelectOka, Source={x:Static loc:Strings.Instance}}"
                                      MinWidth="300">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="{Binding New, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddOkaCommand}"
                                    Padding="10,5" ToolTip.Tip="{Binding AddOka, Source={x:Static loc:Strings.Instance}}"/>
                        </Grid>

                        <!-- OKA Distance -->
                        <Grid ColumnDefinitions="100,Auto,Auto,*" ColumnSpacing="10">
                            <TextBlock Text="{Binding OkaDistance, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <NumericUpDown Grid.Column="1" Value="{Binding OkaDistanceMeters}" ShowButtonSpinner="False"
                                           Minimum="0.1" Maximum="1000" Increment="0.5" Width="100"/>
                            <TextBlock Grid.Column="2" Text="m" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{Binding DefaultDistanceHint, Source={x:Static loc:Strings.Instance}}"
                                       VerticalAlignment="Center" Opacity="0.6" FontSize="12"/>
                        </Grid>

                        <!-- OKA Building Damping -->
                        <Grid ColumnDefinitions="100,Auto,Auto,*" ColumnSpacing="10">
                            <TextBlock Text="{Binding OkaDamping, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <NumericUpDown Grid.Column="1" Value="{Binding OkaBuildingDampingDb}" ShowButtonSpinner="False"
                                           Minimum="0" Maximum="30" Increment="1" Width="100"/>
                            <TextBlock Grid.Column="2" Text="dB" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="{Binding OkaDampingHint, Source={x:Static loc:Strings.Instance}}"
                                       VerticalAlignment="Center" Opacity="0.6" FontSize="12"/>
                        </Grid>

                        <TextBlock Text="{Binding OkaExplanation, Source={x:Static loc:Strings.Instance}}"
                                   Opacity="0.6" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="{Binding Cancel, Source={x:Static loc:Strings.Instance}}" Command="{Binding CancelCommand}" Padding="20,10"/>
                <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveCommand}"
                        Background="#4CAF50" Foreground="White" Padding="20,10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
