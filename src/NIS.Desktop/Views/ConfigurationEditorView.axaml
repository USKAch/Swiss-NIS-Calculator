<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="900"
             x:Class="NIS.Desktop.Views.ConfigurationEditorView"
             x:DataType="vm:ConfigurationEditorViewModel">

    <Design.DataContext>
        <vm:ConfigurationEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <TextBlock Text="Antenna Configuration" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="20" Margin="0,0,0,20">

                <!-- Configuration Name -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Configuration Name" FontWeight="SemiBold" FontSize="14"/>
                        <TextBox Text="{Binding Name}" Watermark="e.g. HF Station"/>
                    </StackPanel>
                </Border>

                <!-- Transmitter Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Transmitter" FontWeight="Bold" FontSize="16"/>

                        <!-- Radio -->
                        <Grid ColumnDefinitions="100,*,Auto,Auto" RowDefinitions="Auto" ColumnSpacing="10">
                            <TextBlock Text="Radio:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Radios}"
                                      SelectedItem="{Binding SelectedRadio}" HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1} ({2}W)">
                                                    <Binding Path="Manufacturer"/>
                                                    <Binding Path="Model"/>
                                                    <Binding Path="MaxPowerWatts"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="Edit" Command="{Binding EditRadioCommand}"
                                    IsEnabled="{Binding SelectedRadio, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="3" Content="+ Add" Command="{Binding AddRadioCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>
                        </Grid>

                        <!-- Linear (optional) -->
                        <CheckBox Content="Use Linear Amplifier" IsChecked="{Binding HasLinear}"/>
                        <Grid ColumnDefinitions="100,*,*" IsVisible="{Binding HasLinear}" ColumnSpacing="10">
                            <TextBlock Text="Linear:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding LinearManufacturer}" Watermark="Manufacturer"/>
                            <TextBox Grid.Column="2" Text="{Binding LinearModel}" Watermark="Model"/>
                        </Grid>

                        <!-- Power -->
                        <Grid ColumnDefinitions="100,150,Auto" ColumnSpacing="10">
                            <TextBlock Text="Power:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <NumericUpDown Grid.Column="1" Value="{Binding PowerWatts}"
                                           Minimum="1" Maximum="10000" Increment="10"/>
                            <TextBlock Grid.Column="2" Text="W" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Cable Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Feed Line" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="Cable:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1" ItemsSource="{Binding Cables}"
                                      SelectedItem="{Binding SelectedCable}" HorizontalAlignment="Stretch">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="2" Content="Edit" Command="{Binding EditCableCommand}"
                                    IsEnabled="{Binding SelectedCable, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="3" Content="+ Add" Command="{Binding AddCableCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>

                            <TextBlock Grid.Row="1" Text="Length:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding CableLengthMeters}"
                                               Minimum="0" Maximum="500" Increment="1" Width="120"/>
                                <TextBlock Text="m" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="Add. Loss:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding AdditionalLossDb}"
                                               Minimum="0" Maximum="20" Increment="0.5" Width="120"/>
                                <TextBlock Text="dB" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="3" Text="Description:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding AdditionalLossDescription}"
                                     Watermark="e.g. Connectors, switch"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Antenna Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Antenna" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="Antenna:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <Border Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                                    CornerRadius="4" Padding="10,8">
                                <TextBlock Text="{Binding SelectedAntenna.DisplayName, FallbackValue='(none selected)'}"
                                           Foreground="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNull}, ConverterParameter=#999:#000}"/>
                            </Border>
                            <Button Grid.Column="2" Content="Select..." Command="{Binding SelectAntennaCommand}" Padding="10,5"/>
                            <Button Grid.Column="3" Content="Edit" Command="{Binding EditAntennaCommand}"
                                    IsEnabled="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}"
                                    Padding="10,5"/>
                            <Button Grid.Column="4" Content="+ Add" Command="{Binding AddAntennaCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="10,5"/>

                            <TextBlock Grid.Row="1" Text="Height:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding HeightMeters}"
                                               Minimum="0" Maximum="100" Increment="0.5" Width="120"/>
                                <TextBlock Text="m" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="Polarization:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal" Spacing="15">
                                <RadioButton Content="Horizontal" IsChecked="{Binding IsHorizontallyRotatable}" GroupName="Polarization"/>
                                <RadioButton Content="Vertical" IsChecked="{Binding IsVerticallyRotatable}" GroupName="Polarization"/>
                                <NumericUpDown Value="{Binding HorizontalAngleDegrees}"
                                               IsVisible="{Binding IsHorizontallyRotatable}"
                                               Minimum="0" Maximum="360" Increment="10" Width="130"/>
                                <TextBlock Text="deg" VerticalAlignment="Center"
                                           IsVisible="{Binding IsHorizontallyRotatable}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Antenna Bands Display -->
                        <Border Background="White" CornerRadius="4" Padding="10" Margin="0,8,0,0"
                                IsVisible="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Frequency Bands:" FontWeight="SemiBold" FontSize="12"/>
                                <ItemsControl ItemsSource="{Binding SelectedAntenna.Bands}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F8F8" CornerRadius="3" Padding="8,4" Margin="0,2">
                                                <Grid ColumnDefinitions="80,80,*">
                                                    <TextBlock Text="{Binding FrequencyMHz, StringFormat='{}{0} MHz'}" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding GainDbi, StringFormat='{}{0:F1} dBi'}" Foreground="#666"/>
                                                    <TextBlock Grid.Column="2" FontSize="10" Foreground="#888"
                                                               Text="{Binding Pattern, Converter={x:Static vm:PatternConverter.Instance}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Operating Parameters Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Operating Parameters" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="Modulation:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding ModulationOptions}"
                                      SelectedIndex="{Binding SelectedModulationIndex}"
                                      HorizontalAlignment="Left" Width="150"/>

                            <TextBlock Grid.Row="1" Text="Activity:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding ActivityFactor}"
                                               Minimum="0" Maximum="1" Increment="0.1" Width="130"
                                               FormatString="0.0"/>
                                <TextBlock Text="(default 0.5)" VerticalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="These parameters apply to all bands of the selected antenna."
                                   Foreground="#666" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- OKA Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Evaluation Point (OKA)" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8" ColumnSpacing="10">
                            <TextBlock Text="Name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding OkaName}"
                                     Watermark="e.g. Neighbor's balcony"/>

                            <TextBlock Grid.Row="1" Text="Distance:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding OkaDistanceMeters}"
                                               Minimum="0.1" Maximum="1000" Increment="0.5" Width="120"/>
                                <TextBlock Text="m" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="Damping:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                                <NumericUpDown Value="{Binding OkaBuildingDampingDb}"
                                               Minimum="0" Maximum="30" Increment="1" Width="120"/>
                                <TextBlock Text="dB (building attenuation)" VerticalAlignment="Center" Foreground="#666"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="OKA = Ort des kurzfristigen Aufenthalts (place of short-term stay)"
                                   Foreground="#666" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="20,10"/>
                <Button Content="Save" Command="{Binding SaveCommand}"
                        Background="#4CAF50" Foreground="White" Padding="20,10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
