<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:NIS.Desktop.ViewModels"
        xmlns:views="using:NIS.Desktop.Views"
        xmlns:loc="using:NIS.Desktop.Localization"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="800"
        x:Class="NIS.Desktop.Views.MainShellWindow"
        x:DataType="vm:MainShellViewModel"
        Title="{Binding WindowTitle}"
        Width="1100" Height="800"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainShellViewModel/>
    </Design.DataContext>

    <Window.DataTemplates>
        <DataTemplate DataType="vm:WelcomeViewModel">
            <views:WelcomeView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ProjectInfoViewModel">
            <views:ProjectInfoView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ProjectOverviewViewModel">
            <views:ProjectOverviewView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ConfigurationEditorViewModel">
            <views:ConfigurationEditorView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AntennaEditorViewModel">
            <views:AntennaEditorView/>
        </DataTemplate>
        <DataTemplate DataType="vm:ResultsViewModel">
            <views:ResultsView/>
        </DataTemplate>
        <DataTemplate DataType="vm:MasterDataManagerViewModel">
            <views:MasterDataManagerView/>
        </DataTemplate>
        <DataTemplate DataType="vm:AntennaMasterEditorViewModel">
            <views:AntennaMasterEditorView/>
        </DataTemplate>
        <DataTemplate DataType="vm:CableMasterEditorViewModel">
            <views:CableMasterEditorView/>
        </DataTemplate>
        <DataTemplate DataType="vm:RadioMasterEditorViewModel">
            <views:RadioMasterEditorView/>
        </DataTemplate>
        <DataTemplate DataType="vm:OkaMasterEditorViewModel">
            <views:OkaMasterEditorView/>
        </DataTemplate>
    </Window.DataTemplates>

    <Grid ColumnDefinitions="Auto,*">
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#1E3A5F" Width="70"
                IsVisible="{Binding ShowSidebar}">
            <StackPanel Margin="0,10">
                <!-- Home -->
                <Button Command="{Binding NavigateToWelcomeCommand}"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,15"
                        ToolTip.Tip="{Binding Home, Source={x:Static loc:Strings.Instance}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ " FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Home, Source={x:Static loc:Strings.Instance}}"
                                   FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Project -->
                <Button Command="{Binding NavigateToProjectCommand}"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,15"
                        IsEnabled="{Binding HasProject}"
                        ToolTip.Tip="{Binding Project, Source={x:Static loc:Strings.Instance}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Project, Source={x:Static loc:Strings.Instance}}"
                                   FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Master Data -->
                <Button Command="{Binding NavigateToMasterDataCommand}"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="0,15"
                        ToolTip.Tip="{Binding MasterData, Source={x:Static loc:Strings.Instance}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¡" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding MasterDataShort, Source={x:Static loc:Strings.Instance}}"
                                   FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
