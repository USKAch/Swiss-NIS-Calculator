<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="NIS.Desktop.Views.AntennaEditorView"
             x:DataType="vm:AntennaEditorViewModel">

    <Design.DataContext>
        <vm:AntennaEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Panel>
                <TextBlock Text="{Binding AddNewAntenna, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding IsAddingNew}"
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding AntennaRepository, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding !IsAddingNew}"
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
            </Panel>
        </Border>

        <!-- Antenna Selection (hidden when adding new) -->
        <Border Grid.Row="1" Grid.RowSpan="2" Margin="15" Background="White" CornerRadius="4" Padding="20"
                IsVisible="{Binding !IsAddingNew}">
            <StackPanel Spacing="15">
                <TextBlock Text="{Binding SelectAntennaPrompt, Source={x:Static loc:Strings.Instance}}" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding TypeToSearchDescription, Source={x:Static loc:Strings.Instance}}" Foreground="#666"/>
                <AutoCompleteBox ItemsSource="{Binding FilteredAntennas}"
                                 FilterMode="Contains"
                                 Watermark="{Binding TypeToSearch, Source={x:Static loc:Strings.Instance}}"
                                 MinimumPrefixLength="0"
                                 IsTextCompletionEnabled="True"
                                 SelectedItem="{Binding SelectedAntenna}"
                                 ValueMemberBinding="{Binding DisplayName}"
                                 Padding="10,8"
                                 FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Add New Antenna Form (shown when adding new) -->
        <ScrollViewer Grid.Row="2" Padding="20" IsVisible="{Binding IsAddingNew}" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="{Binding AntennaDetails, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>

                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="15">
                            <TextBlock Text="{Binding Manufacturer, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding NewManufacturer}" Watermark="{Binding ManufacturerExample, Source={x:Static loc:Strings.Instance}}" MinWidth="250"/>

                            <TextBlock Grid.Row="1" Text="{Binding Model, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding NewModel}" Watermark="{Binding ModelExample, Source={x:Static loc:Strings.Instance}}" MinWidth="250"/>

                            <TextBlock Grid.Row="2" Text="{Binding Rotatable, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding NewIsRotatable}" Content="{Binding HorizontallyRotatable, Source={x:Static loc:Strings.Instance}}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding FrequencyBands, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" FontSize="16"/>
                            <Button Grid.Column="1" Content="{Binding AddBand, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddBandCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="12,6"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding NewBands}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="6" Padding="15" Margin="0,8">
                                        <StackPanel Spacing="12">
                                            <!-- Frequency and Gain row -->
                                            <Grid ColumnDefinitions="Auto,120,Auto,80,*,Auto">
                                                <TextBlock Text="{Binding Frequency, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                                                <ComboBox Grid.Column="1" SelectedItem="{Binding FrequencyMHz}"
                                                          ItemsSource="{Binding $parent[ItemsControl].((vm:AntennaEditorViewModel)DataContext).AvailableFrequencies}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding StringFormat={}{0} MHz}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <TextBlock Grid.Column="2" Text="{Binding Gain, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" Margin="15,0,8,0" FontWeight="SemiBold"/>
                                                <NumericUpDown Grid.Column="3" Value="{Binding GainDbi}" ShowButtonSpinner="False" Minimum="-20" Maximum="50" Increment="0.5" FormatString="F1" Width="80"/>
                                                <TextBlock Grid.Column="4" Text="dBi" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                                <Button Grid.Column="5" Content="{Binding Remove, Source={x:Static loc:Strings.Instance}}"
                                                        Command="{Binding $parent[ItemsControl].((vm:AntennaEditorViewModel)DataContext).RemoveBandCommand}"
                                                        CommandParameter="{Binding}"
                                                        Padding="10,5" Foreground="#F44336"/>
                                            </Grid>

                                            <!-- Pattern section -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="{Binding VerticalRadiationPattern, Source={x:Static loc:Strings.Instance}}" FontSize="12" Foreground="#666"/>
                                                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnSpacing="4">
                                                    <StackPanel Spacing="2">
                                                        <TextBlock Text="0°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern0}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Spacing="2">
                                                        <TextBlock Text="10°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern10}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2" Spacing="2">
                                                        <TextBlock Text="20°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern20}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="3" Spacing="2">
                                                        <TextBlock Text="30°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern30}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="4" Spacing="2">
                                                        <TextBlock Text="40°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern40}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="5" Spacing="2">
                                                        <TextBlock Text="50°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern50}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="6" Spacing="2">
                                                        <TextBlock Text="60°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern60}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="7" Spacing="2">
                                                        <TextBlock Text="70°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern70}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="8" Spacing="2">
                                                        <TextBlock Text="80°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern80}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="9" Spacing="2">
                                                        <TextBlock Text="90°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern90}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="60" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="{Binding AddAtLeastOneBand, Source={x:Static loc:Strings.Instance}}"
                                   Foreground="#666" FontSize="11" FontStyle="Italic" TextWrapping="Wrap"
                                   IsVisible="{Binding !NewBands.Count}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="20,15">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Add New button (shown in list mode) -->
                <Button Content="{Binding AddNewAntenna, Source={x:Static loc:Strings.Instance}}"
                        Command="{Binding StartAddNewCommand}"
                        IsVisible="{Binding !IsAddingNew}"
                        Background="#4CAF50" Foreground="White" Padding="15,10"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Content="{Binding Cancel, Source={x:Static loc:Strings.Instance}}" Command="{Binding CancelCommand}" Padding="20,10"/>

                    <!-- Save button (shown in add mode) -->
                    <Button Content="{Binding SaveAntenna, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveNewAntennaCommand}"
                            IsVisible="{Binding IsAddingNew}"
                            Background="#4CAF50" Foreground="White" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
