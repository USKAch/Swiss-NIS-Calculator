<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="800"
             x:Class="NIS.Desktop.Views.AntennaMasterEditorView"
             x:DataType="vm:AntennaMasterEditorViewModel">

    <Design.DataContext>
        <vm:AntennaMasterEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20,15">
            <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Antenna Details -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Antenna Details" FontWeight="Bold" FontSize="16"/>

                        <!-- Line 1: Manufacturer and Model -->
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <TextBlock Text="Manufacturer:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding Manufacturer}" Watermark="e.g. Fritzel" Width="300"/>

                            <TextBlock Text="Model:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding Model}" Watermark="e.g. FB-Do450" Width="300"/>
                        </StackPanel>

                        <!-- Line 2: Polarization and Rotatable -->
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <TextBlock Text="Polarization:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <RadioButton Content="Horizontal" IsChecked="{Binding IsHorizontallyPolarized}" GroupName="Polarization"/>
                            <RadioButton Content="Vertical" IsChecked="{Binding IsVerticallyPolarized}" GroupName="Polarization"/>

                            <CheckBox IsChecked="{Binding IsRotatable}" Content="Rotatable" Margin="20,0,0,0"
                                      IsVisible="{Binding IsHorizontallyPolarized}"/>
                            <NumericUpDown Value="{Binding HorizontalAngleDegrees}" ShowButtonSpinner="False"
                                           Minimum="0" Maximum="360" Increment="10" Width="80"
                                           IsVisible="{Binding IsRotatable}"/>
                            <TextBlock Text="deg (info only)" VerticalAlignment="Center" Foreground="#666"
                                       IsVisible="{Binding IsRotatable}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Frequency Bands -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="20">
                    <StackPanel Spacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Frequency Bands" FontWeight="Bold" FontSize="16"/>
                            <Button Grid.Column="1" Content="+ Add Band" Command="{Binding AddBandCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="12,6"/>
                        </Grid>

                        <ItemsControl ItemsSource="{Binding Bands}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="6" Padding="15" Margin="0,8">
                                        <StackPanel Spacing="12">
                                            <!-- Frequency and Gain row -->
                                            <Grid ColumnDefinitions="Auto,120,Auto,100,*,Auto">
                                                <TextBlock Text="Frequency:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                                                <ComboBox Grid.Column="1" SelectedItem="{Binding FrequencyMHz}"
                                                          ItemsSource="{Binding $parent[ItemsControl].((vm:AntennaMasterEditorViewModel)DataContext).AvailableFrequencies}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding StringFormat={}{0} MHz}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <TextBlock Grid.Column="2" Text="Gain:" VerticalAlignment="Center" Margin="15,0,8,0" FontWeight="SemiBold"/>
                                                <NumericUpDown Grid.Column="3" Value="{Binding GainDbi}" ShowButtonSpinner="False" Minimum="-20" Maximum="50" Increment="0.5" FormatString="F1" Width="80"/>
                                                <TextBlock Grid.Column="4" Text="dBi (-20 to 50)" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="#666"/>
                                                <Button Grid.Column="5" Content="Remove"
                                                        Command="{Binding $parent[ItemsControl].((vm:AntennaMasterEditorViewModel)DataContext).RemoveBandCommand}"
                                                        CommandParameter="{Binding}"
                                                        Padding="10,5" Foreground="#F44336"/>
                                            </Grid>

                                            <!-- Pattern section -->
                                            <StackPanel Spacing="8">
                                                <TextBlock Text="Vertical Radiation Pattern (attenuation in dB at each angle from horizon):" FontSize="12" Foreground="#666"/>
                                                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnSpacing="4">
                                                    <StackPanel Spacing="2">
                                                        <TextBlock Text="0°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern0}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="1" Spacing="2">
                                                        <TextBlock Text="10°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern10}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="2" Spacing="2">
                                                        <TextBlock Text="20°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern20}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="3" Spacing="2">
                                                        <TextBlock Text="30°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern30}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="4" Spacing="2">
                                                        <TextBlock Text="40°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern40}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="5" Spacing="2">
                                                        <TextBlock Text="50°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern50}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="6" Spacing="2">
                                                        <TextBlock Text="60°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern60}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="7" Spacing="2">
                                                        <TextBlock Text="70°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern70}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="8" Spacing="2">
                                                        <TextBlock Text="80°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern80}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                    <StackPanel Grid.Column="9" Spacing="2">
                                                        <TextBlock Text="90°" FontSize="11" HorizontalAlignment="Center" Foreground="#888"/>
                                                        <NumericUpDown Value="{Binding Pattern90}" Minimum="0" Maximum="60" Increment="1" FormatString="F1" Width="70" ShowButtonSpinner="False"/>
                                                    </StackPanel>
                                                </Grid>
                                                <TextBlock Text="0° = Horizon (max radiation), 90° = Straight up. Values: 0-60 dB attenuation."
                                                           FontSize="10" Foreground="#888" FontStyle="Italic"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Add at least one frequency band with gain and vertical radiation pattern."
                                   Foreground="#666" FontSize="11" FontStyle="Italic" TextWrapping="Wrap"
                                   IsVisible="{Binding !Bands.Count}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding ValidationMessage}" Foreground="#F44336" VerticalAlignment="Center"
                           IsVisible="{Binding ValidationMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="20,10"/>
                    <Button Content="Save" Command="{Binding SaveCommand}"
                            Background="#4CAF50" Foreground="White" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
