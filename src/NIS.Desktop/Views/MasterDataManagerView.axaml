<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="NIS.Desktop.Views.MasterDataManagerView"
             x:DataType="vm:MasterDataManagerViewModel">

    <Design.DataContext>
        <vm:MasterDataManagerViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*,Auto">
        <!-- Tab Control -->
        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTabIndex}" Margin="20">

            <!-- Antennas Tab -->
            <TabItem Header="{Binding Antennas, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding AntennaSearchText}"
                                 Watermark="{Binding SearchAntennas, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearAntennaSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="AntennasListBox"
                                 ItemsSource="{Binding FilteredAntennas}"
                                 SelectedItem="{Binding SelectedAntenna}"
                                 DoubleTapped="OnAntennaDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="250,*">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="14"/>
                                                    <TextBlock Text="{Binding ProjectSpecific, Source={x:Static loc:Strings.Instance}}"
                                                               IsVisible="{Binding IsUserData}"
                                                               Foreground="{DynamicResource SuccessButtonBrush}"
                                                               FontSize="12" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,3,0,0">
                                                    <TextBlock Text="{Binding AntennaTypeDisplay}"
                                                               Opacity="0.6" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <ItemsControl ItemsSource="{Binding Bands}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="3" Padding="6,2" Margin="0,0,5,3">
                                                                <TextBlock FontSize="11" Foreground="{DynamicResource PrimaryButtonBrush}">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="{}{0}MHz">
                                                                            <Binding Path="FrequencyMHz"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddAntennaButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddAntennaCommand}"
                                Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <!-- Show Edit if can edit, View otherwise - only when antenna selected -->
                        <Button Command="{Binding EditAntennaCommand}"
                                IsVisible="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8">
                            <Button.Content>
                                <Panel>
                                    <TextBlock Text="{Binding Edit, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding CanEditSelectedAntenna}"/>
                                    <TextBlock Text="{Binding View, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding !CanEditSelectedAntenna}"/>
                                </Panel>
                            </Button.Content>
                        </Button>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteAntennaCommand}"
                                IsVisible="{Binding CanDeleteSelectedAntenna}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Cables Tab -->
            <TabItem Header="{Binding Cables, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding CableSearchText}"
                                 Watermark="{Binding SearchCables, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearCableSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="CablesListBox"
                                 ItemsSource="{Binding FilteredCables}"
                                 SelectedItem="{Binding SelectedCable}"
                                 DoubleTapped="OnCableDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding ProjectSpecific, Source={x:Static loc:Strings.Instance}}"
                                                           IsVisible="{Binding IsUserData}"
                                                           Foreground="{DynamicResource SuccessButtonBrush}"
                                                           FontSize="12" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Opacity="0.6" FontSize="12" VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} frequency points">
                                                        <Binding Path="AttenuationPer100m.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddCableButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddCableCommand}"
                                Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Command="{Binding EditCableCommand}"
                                IsVisible="{Binding SelectedCable, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8">
                            <Button.Content>
                                <Panel>
                                    <TextBlock Text="{Binding Edit, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding CanEditSelectedCable}"/>
                                    <TextBlock Text="{Binding View, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding !CanEditSelectedCable}"/>
                                </Panel>
                            </Button.Content>
                        </Button>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteCableCommand}"
                                IsVisible="{Binding CanDeleteSelectedCable}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Radios Tab -->
            <TabItem Header="{Binding Radios, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding RadioSearchText}"
                                 Watermark="{Binding SearchRadios, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearRadioSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="RadiosListBox"
                                 ItemsSource="{Binding FilteredRadios}"
                                 SelectedItem="{Binding SelectedRadio}"
                                 DoubleTapped="OnRadioDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock FontWeight="SemiBold" FontSize="14">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding Path="Manufacturer"/>
                                                            <Binding Path="Model"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Text="{Binding ProjectSpecific, Source={x:Static loc:Strings.Instance}}"
                                                           IsVisible="{Binding IsUserData}"
                                                           Foreground="{DynamicResource SuccessButtonBrush}"
                                                           FontSize="12" VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Opacity="0.6" FontSize="12" VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}W max">
                                                        <Binding Path="MaxPowerWatts"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddRadioButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddRadioCommand}"
                                Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Command="{Binding EditRadioCommand}"
                                IsVisible="{Binding SelectedRadio, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8">
                            <Button.Content>
                                <Panel>
                                    <TextBlock Text="{Binding Edit, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding CanEditSelectedRadio}"/>
                                    <TextBlock Text="{Binding View, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding !CanEditSelectedRadio}"/>
                                </Panel>
                            </Button.Content>
                        </Button>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteRadioCommand}"
                                IsVisible="{Binding CanDeleteSelectedRadio}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- OKA Tab -->
            <TabItem Header="OKA">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding OkaSearchText}"
                                 Watermark="{Binding SearchOkas, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearOkaSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="OkasListBox"
                                 ItemsSource="{Binding FilteredOkas}"
                                 SelectedItem="{Binding SelectedOka}"
                                 DoubleTapped="OnOkaDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="50,*,Auto">
                                            <TextBlock Text="{Binding Id, StringFormat='{}{0}.'}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="2" Opacity="0.6" FontSize="12" VerticalAlignment="Center"
                                                       Text="{Binding DefaultDampingDb, StringFormat='{}{0} dB'}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddOka, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddOkaCommand}"
                                Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Command="{Binding EditOkaCommand}"
                                IsVisible="{Binding SelectedOka, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8">
                            <Button.Content>
                                <Panel>
                                    <TextBlock Text="{Binding Edit, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding CanEditSelectedOka}"/>
                                    <TextBlock Text="{Binding View, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding !CanEditSelectedOka}"/>
                                </Panel>
                            </Button.Content>
                        </Button>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteOkaCommand}"
                                IsVisible="{Binding CanDeleteSelectedOka}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Factory Settings Tab (Modulations, Constants, Bands - Admin Mode only) -->
            <TabItem Header="{Binding FactorySettings, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding IsAdminMode}">
                <Grid ColumnDefinitions="*,20,*" Margin="0,10,0,0">
                    <!-- Bands Section (left, full height) -->
                    <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="15">
                        <Grid RowDefinitions="Auto,*,Auto">
                            <TextBlock Text="{Binding Bands, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                            <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                                <DataGrid ItemsSource="{Binding Bands}"
                                          SelectedItem="{Binding SelectedBand}"
                                          AutoGenerateColumns="False"
                                          CanUserResizeColumns="True"
                                          CanUserReorderColumns="False"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{Binding Name, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="{Binding Frequency, Source={x:Static loc:Strings.Instance}}" Binding="{Binding FrequencyMHz}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                <Button Content="{Binding AddBand, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddBandCommand}"
                                        Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="10,6"/>
                                <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteBandCommand}" Padding="10,6"/>
                                <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveBandsCommand}"
                                        Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="10,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Right column: Constants + Modulations stacked -->
                    <StackPanel Grid.Column="2" Spacing="20">
                        <!-- Constants Section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="15">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{Binding Constants, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14"/>
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                    <TextBlock Text="{Binding GroundReflectionFactor, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="1" Value="{Binding GroundReflectionFactor}" Minimum="0" Maximum="10" Increment="0.1" Width="100"/>
                                    <TextBlock Grid.Row="1" Text="{Binding DefaultActivityFactor, Source={x:Static loc:Strings.Instance}}" VerticalAlignment="Center" Margin="0,8,0,0"/>
                                    <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding DefaultActivityFactor}" Minimum="0" Maximum="1" Increment="0.1" Width="100" Margin="0,8,0,0"/>
                                </Grid>
                                <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveConstantsCommand}"
                                        HorizontalAlignment="Left" Padding="10,6" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Modulations Section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="15">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <TextBlock Text="{Binding Modulations, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1" MinHeight="150">
                                    <DataGrid ItemsSource="{Binding Modulations}"
                                              SelectedItem="{Binding SelectedModulation}"
                                              AutoGenerateColumns="False"
                                              CanUserResizeColumns="True"
                                              CanUserReorderColumns="False"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{Binding Name, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="{Binding Factor, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Factor}" Width="80"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                    <Button Content="{Binding AddModulation, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddModulationCommand}"
                                            Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="10,6"/>
                                    <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteModulationCommand}" Padding="10,6"/>
                                    <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveModulationsCommand}"
                                            Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="10,6"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Translations Tab -->
            <TabItem Header="{Binding Translations, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="0,10,0,0" DataContext="{Binding TranslationEditor}">
                    <!-- Search and Filter -->
                    <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding SearchText}"
                                 Watermark="{Binding SearchTranslations, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                        <ComboBox Grid.Column="2" ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Margin="10,0,0,0" MinWidth="150"/>
                    </Grid>

                    <!-- Translation list (read-only, double-click to edit) -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <DataGrid x:Name="TranslationsDataGrid"
                                  ItemsSource="{Binding FilteredTranslations}"
                                  SelectedItem="{Binding SelectedItem}"
                                  DoubleTapped="OnTranslationDoubleTapped"
                                  AutoGenerateColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserReorderColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DE" Binding="{Binding German}" Width="*"/>
                                <DataGridTextColumn Header="FR" Binding="{Binding French}" Width="*"/>
                                <DataGridTextColumn Header="IT" Binding="{Binding Italian}" Width="*"/>
                                <DataGridTextColumn Header="EN" Binding="{Binding English}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Edit panel (shown when editing) -->
                    <Border Grid.Row="2" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="15" Margin="0,10,0,0"
                            IsVisible="{Binding IsEditing}">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="60,*">
                            <TextBlock Text="DE" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Column="1" Text="{Binding EditingGerman}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="1" Text="FR" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EditingFrench}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="2" Text="IT" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EditingItalian}" Margin="0,0,0,8"/>
                            <TextBlock Grid.Row="3" Text="EN" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EditingEnglish}" Margin="0,0,0,8"/>
                            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                                <Button Content="{Binding Cancel, Source={x:Static loc:Strings.Instance}}" Command="{Binding CancelEditCommand}" Padding="15,8"/>
                                <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveEditCommand}"
                                        Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Status message -->
                    <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Margin="0,10,0,0"
                               Opacity="0.6" FontSize="12"
                               IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </Grid>
            </TabItem>

            <!-- Database Tab (Admin Mode only) -->
            <TabItem Header="{Binding Database, Source={x:Static loc:Strings.Instance}}" IsVisible="{Binding IsAdminMode}">
                <Grid Margin="0,20,0,0">
                    <StackPanel MaxWidth="500" HorizontalAlignment="Center" Spacing="20">
                        <!-- Warning banner -->
                        <Border Background="{DynamicResource DangerButtonBrush}" CornerRadius="4" Padding="15">
                            <StackPanel Spacing="5">
                                <TextBlock Text="FACTORY MODE" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                <TextBlock Text="{Binding DatabaseTabInfo, Source={x:Static loc:Strings.Instance}}"
                                           Foreground="White" TextWrapping="Wrap" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Export section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="20">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{Binding ExportFactoryData, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding ExportFactoryDataDesc, Source={x:Static loc:Strings.Instance}}"
                                           Opacity="0.7" TextWrapping="Wrap" FontSize="12"/>
                                <Button Content="{Binding ExportFactoryData, Source={x:Static loc:Strings.Instance}}"
                                        Command="{Binding ExportDatabaseCommand}"
                                        Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}"
                                        HorizontalAlignment="Left" Padding="20,10" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Import section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="20">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{Binding ImportFactoryData, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding ImportDatabaseDesc, Source={x:Static loc:Strings.Instance}}"
                                           Opacity="0.7" TextWrapping="Wrap" FontSize="12"/>
                                <Button Content="{Binding ImportFactoryData, Source={x:Static loc:Strings.Instance}}"
                                        Command="{Binding ImportDatabaseCommand}"
                                        HorizontalAlignment="Left" Padding="20,10" Margin="0,5,0,0"
                                        Foreground="{DynamicResource DangerButtonBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Data Folder section -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="20">
                            <StackPanel Spacing="10">
                                <TextBlock Text="{Binding DataFolder, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding DataFolderDesc, Source={x:Static loc:Strings.Instance}}"
                                           Opacity="0.7" TextWrapping="Wrap" FontSize="12"/>
                                <Button Content="{Binding OpenDataFolder, Source={x:Static loc:Strings.Instance}}"
                                        Command="{Binding OpenDataFolderCommand}"
                                        Padding="20,10" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20,15">
            <Grid ColumnDefinitions="Auto,*">
                <Button Content="{Binding Back, Source={x:Static loc:Strings.Instance}}" Command="{Binding BackCommand}" Padding="20,10"/>

                <!-- Admin mode indicator -->
                <TextBlock Grid.Column="1" Text="FACTORY MODE" Foreground="{DynamicResource DangerButtonBrush}"
                           FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                           IsVisible="{Binding IsAdminMode}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

