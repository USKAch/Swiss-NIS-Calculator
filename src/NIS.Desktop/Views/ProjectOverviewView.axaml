<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="NIS.Desktop.Views.ProjectOverviewView"
             x:DataType="vm:ProjectOverviewViewModel">

    <Design.DataContext>
        <vm:ProjectOverviewViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBox Text="{Binding ProjectName}"
                                 FontSize="24" FontWeight="Bold"
                                 Background="White" BorderThickness="1" BorderBrush="#1976D2"
                                 Padding="5,2" MinWidth="200"/>
                        <TextBlock Text="{Binding DirtyIndicator}"
                                   FontSize="24" FontWeight="Bold" Foreground="#FFEB3B"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding StationSummary}"
                               FontSize="12" Foreground="#BBDEFB" Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveProjectCommand}"
                            Background="#1976D2" Foreground="White" Padding="15,8"/>
                    <Button Content="{Binding SaveAs, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveProjectAsCommand}"
                            Background="#1976D2" Foreground="White" Padding="15,8"/>
                    <Button Content="{Binding Export, Source={x:Static loc:Strings.Instance}}" Command="{Binding ExportCommand}"
                            Background="#4CAF50" Foreground="White" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Station Info Panel -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="{Binding StationInfo, Source={x:Static loc:Strings.Instance}}" FontSize="16" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto" ColumnSpacing="15">
                            <TextBlock Text="{Binding Callsign, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Callsign}"/>

                            <TextBlock Grid.Column="2" Text="{Binding Address, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="3" Text="{Binding Address}"/>
                        </Grid>
                        <Button Content="{Binding EditStationInfo, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditStationInfoCommand}"
                                HorizontalAlignment="Left" Padding="15,8"/>
                    </StackPanel>
                </Border>

                <!-- Configurations Section -->
                <Border Background="#F5F5F5" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding Configurations, Source={x:Static loc:Strings.Instance}}" FontSize="18" FontWeight="Bold"/>
                            <Button Grid.Column="1" Content="{Binding AddConfiguration, Source={x:Static loc:Strings.Instance}}"
                                    Command="{Binding AddConfigurationCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="15,8"/>
                        </Grid>

                        <Border Background="White" CornerRadius="4" Padding="10"
                                IsVisible="{Binding HasConfigurations}">
                            <ItemsControl ItemsSource="{Binding Configurations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10,8">
                                            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Antenna.DisplayName}" FontWeight="SemiBold"/>
                                                    <TextBlock Foreground="#666" FontSize="12">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0} {1}W | {2}">
                                                                <Binding Path="Radio.DisplayName"/>
                                                                <Binding Path="PowerWatts"/>
                                                                <Binding Path="Cable.Type"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                                    <TextBlock Text="{Binding ModulationDisplay}" Foreground="#666" FontSize="11"/>
                                                    <TextBlock Text="{Binding OkaSummary}" Foreground="#666" FontSize="11"/>
                                                </StackPanel>
                                                <Button Grid.Column="2" Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}"
                                                        Command="{Binding $parent[ItemsControl].((vm:ProjectOverviewViewModel)DataContext).EditConfigurationCommand}"
                                                        CommandParameter="{Binding}"
                                                        Margin="5,0" Padding="10,5"/>
                                                <Button Grid.Column="3" Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}"
                                                        Command="{Binding $parent[ItemsControl].((vm:ProjectOverviewViewModel)DataContext).DeleteConfigurationCommand}"
                                                        CommandParameter="{Binding}"
                                                        Margin="5,0" Padding="10,5" Foreground="#F44336"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <TextBlock Text="{Binding NoConfigurations, Source={x:Static loc:Strings.Instance}}"
                                   IsVisible="{Binding !HasConfigurations}"
                                   Foreground="#999" FontStyle="Italic" Margin="10,5"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="#E3F2FD" CornerRadius="8" Padding="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                        <Button Content="{Binding CalculateAll, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding CalculateAllCommand}"
                                IsEnabled="{Binding CanCalculate}"
                                Background="#2196F3" Foreground="White"
                                Padding="30,15" FontSize="16"/>
                        <Button Content="{Binding ExportReport, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ExportReportCommand}"
                                IsEnabled="{Binding HasResults}"
                                Background="#4CAF50" Foreground="White"
                                Padding="30,15" FontSize="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding StatusMessage}"/>
                <TextBlock Grid.Column="1" Text="{Binding LanguageDisplay}" Foreground="#666"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
