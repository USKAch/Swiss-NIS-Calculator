<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="NIS.Desktop.Views.ProjectOverviewView"
             x:DataType="vm:ProjectOverviewViewModel">

    <Design.DataContext>
        <vm:ProjectOverviewViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header with project name -->
        <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="20,15">
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="{Binding ProjectName}"
                           FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding DirtyIndicator}" FontSize="20" FontWeight="Bold"
                           Foreground="{DynamicResource DangerButtonBrush}" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20,20,10,20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Project Info Panel -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="{Binding ProjectInfo, Source={x:Static loc:Strings.Instance}}" FontSize="16" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15" RowSpacing="5">
                            <TextBlock Text="{Binding ProjectName, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding ProjectName}"/>

                            <TextBlock Grid.Column="2" Text="{Binding Operator, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="3" Text="{Binding OperatorName}"/>

                            <TextBlock Grid.Row="1" Text="{Binding Callsign, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Callsign}"/>

                            <TextBlock Grid.Row="2" Text="{Binding Address, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Address}"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Location, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Location}"/>
                        </Grid>
                        <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditStationInfoCommand}"
                                HorizontalAlignment="Left" Padding="15,8"/>
                    </StackPanel>
                </Border>

                <!-- Configurations Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding Configurations, Source={x:Static loc:Strings.Instance}}" FontSize="16" FontWeight="Bold"/>
                            <Button Grid.Column="1" Content="{Binding AddConfiguration, Source={x:Static loc:Strings.Instance}}"
                                    Command="{Binding AddConfigurationCommand}"
                                    Background="{DynamicResource PrimaryButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        </Grid>

                        <DataGrid x:Name="ConfigurationsGrid"
                                  ItemsSource="{Binding ConfigurationItems}"
                                  IsVisible="{Binding HasConfigurations}"
                                  AutoGenerateColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="All"
                                  HorizontalGridLinesBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                                  VerticalGridLinesBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  BorderThickness="1"
                                  HorizontalAlignment="Left"
                                  MaxHeight="400"
                                  DoubleTapped="OnConfigurationDoubleTapped">
                            <DataGrid.Styles>
                                <Style Selector="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="MinHeight" Value="36"/>
                                </Style>
                            </DataGrid.Styles>
                            <DataGrid.Columns>
                                <!-- Antenna Group -->
                                <DataGridTextColumn Header="{Binding Antenna, Source={x:Static loc:Strings.Instance}}" Binding="{Binding AntennaDisplay}" Width="Auto"/>
                                <DataGridTemplateColumn Header="{Binding Bands, Source={x:Static loc:Strings.Instance}}" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding FrequencyDisplay}" FontSize="11" VerticalAlignment="Center" Padding="10,6"
                                                       TextWrapping="Wrap" MaxWidth="100"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!-- Height with right border as group separator -->
                                <DataGridTemplateColumn Header="{Binding Height, Source={x:Static loc:Strings.Instance}}" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,2,0" Padding="10,6,12,6">
                                                <TextBlock Text="{Binding HeightDisplay}" VerticalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!-- Transmitter/Cable Group -->
                                <DataGridTextColumn Header="{Binding Cable, Source={x:Static loc:Strings.Instance}}" Binding="{Binding CableDisplay}" Width="Auto"/>
                                <!-- Power with right border as group separator -->
                                <DataGridTemplateColumn Header="{Binding Power, Source={x:Static loc:Strings.Instance}}" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,2,0" Padding="10,6,20,6">
                                                <TextBlock Text="{Binding PowerDisplay}" VerticalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!-- OKA Group -->
                                <DataGridTextColumn Header="OKA" Binding="{Binding OkaNameDisplay}" Width="Auto"/>
                                <DataGridTextColumn Header="{Binding OkaDistance, Source={x:Static loc:Strings.Instance}}" Binding="{Binding OkaDistanceDisplay}" Width="Auto"/>
                                <DataGridTemplateColumn Header="" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="5,0">
                                                <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}"
                                                        Command="{Binding $parent[DataGrid].((vm:ProjectOverviewViewModel)DataContext).EditConfigurationCommand}"
                                                        CommandParameter="{Binding}"
                                                        Padding="8,3"/>
                                                <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}"
                                                        Command="{Binding $parent[DataGrid].((vm:ProjectOverviewViewModel)DataContext).DeleteConfigurationCommand}"
                                                        CommandParameter="{Binding}"
                                                        Padding="8,3" Foreground="{DynamicResource DangerButtonBrush}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock Text="{Binding NoConfigurations, Source={x:Static loc:Strings.Instance}}"
                                   IsVisible="{Binding !HasConfigurations}"
                                   Opacity="0.5" FontStyle="Italic" Margin="10,5"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        CornerRadius="8" Padding="20">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Button Content="{Binding Back, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding GoBackCommand}"
                                Padding="20,10"/>
                        <Button Grid.Column="2" Content="{Binding CalculateAll, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding CalculateAllCommand}"
                                IsEnabled="{Binding CanCalculate}"
                                Background="{DynamicResource HeaderPrimaryBrush}" Foreground="{DynamicResource HeaderForegroundBrush}"
                                Padding="30,15" FontSize="16"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20,12">
            <TextBlock Text="{Binding NisvCompliance, Source={x:Static loc:Strings.Instance}}"
                       FontSize="12" Opacity="0.5" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
