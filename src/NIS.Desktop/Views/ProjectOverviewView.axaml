<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="NIS.Desktop.Views.ProjectOverviewView"
             x:DataType="vm:ProjectOverviewViewModel">

    <Design.DataContext>
        <vm:ProjectOverviewViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header Bar -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBox Text="{Binding ProjectName}"
                                 FontSize="24" FontWeight="Bold"
                                 Padding="5,2" MinWidth="200"/>
                        <TextBlock Text="{Binding DirtyIndicator}"
                                   FontSize="24" FontWeight="Bold" Foreground="#FFEB3B"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding StationSummary}"
                               FontSize="12" Foreground="#BBDEFB" Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveProjectCommand}"
                            Background="#1976D2" Foreground="White" Padding="15,8"/>
                    <Button Content="{Binding SaveAs, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveProjectAsCommand}"
                            Background="#1976D2" Foreground="White" Padding="15,8"/>
                    <Button Content="{Binding Export, Source={x:Static loc:Strings.Instance}}" Command="{Binding ExportCommand}"
                            Background="#4CAF50" Foreground="White" Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Station Info Panel -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="{Binding StationInfo, Source={x:Static loc:Strings.Instance}}" FontSize="16" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto" ColumnSpacing="15">
                            <TextBlock Text="{Binding Callsign, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Callsign}"/>

                            <TextBlock Grid.Column="2" Text="{Binding Address, Source={x:Static loc:Strings.Instance}}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="3" Text="{Binding Address}"/>
                        </Grid>
                        <Button Content="{Binding EditStationInfo, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditStationInfoCommand}"
                                HorizontalAlignment="Left" Padding="15,8"/>
                    </StackPanel>
                </Border>

                <!-- Configurations Section -->
                <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                        BorderThickness="1" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{Binding Configurations, Source={x:Static loc:Strings.Instance}}" FontSize="18" FontWeight="Bold"/>
                            <Button Grid.Column="1" Content="{Binding AddConfiguration, Source={x:Static loc:Strings.Instance}}"
                                    Command="{Binding AddConfigurationCommand}"
                                    Background="#4CAF50" Foreground="White" Padding="15,8"/>
                        </Grid>

                        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="1" CornerRadius="4" Padding="10"
                                IsVisible="{Binding HasConfigurations}">
                            <Grid RowDefinitions="Auto,Auto,*">
                                <!-- Column Headers -->
                                <Grid Grid.Row="0" ColumnDefinitions="25,2*,1.5*,50,70,55,1.2*,60,50,55" Margin="0,0,0,5">
                                    <TextBlock Grid.Column="0" Text="#" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Antenna, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="2" Text="{Binding Bands, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="3" Text="{Binding Height, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="4" Text="{Binding Cable, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="5" Text="{Binding Power, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="6" Text="OKA" FontWeight="Bold" Opacity="0.6"/>
                                    <TextBlock Grid.Column="7" Text="{Binding Distance, Source={x:Static loc:Strings.Instance}}" FontWeight="Bold" Opacity="0.6"/>
                                </Grid>
                                <Border Grid.Row="1" Height="1" Background="{DynamicResource SystemControlForegroundBaseMediumBrush}" Opacity="0.3" Margin="0,0,0,5"/>

                                <!-- Data Rows -->
                                <ItemsControl Grid.Row="2" ItemsSource="{Binding ConfigurationItems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                    BorderThickness="0,0,0,1" Padding="0,6" Opacity="0.8">
                                                <Grid ColumnDefinitions="25,2*,1.5*,50,70,55,1.2*,60,50,55">
                                                    <TextBlock Grid.Column="0" Text="{Binding NumberDisplay}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding AntennaDisplay}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding FrequencyDisplay}" Opacity="0.7" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding HeightDisplay}" Opacity="0.7"/>
                                                    <TextBlock Grid.Column="4" Text="{Binding CableDisplay}" Opacity="0.7"/>
                                                    <TextBlock Grid.Column="5" Text="{Binding PowerDisplay}" Opacity="0.7"/>
                                                    <TextBlock Grid.Column="6" Text="{Binding OkaNameDisplay}" Foreground="#1976D2" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="7" Text="{Binding OkaDistanceDisplay}" Opacity="0.7"/>
                                                    <Button Grid.Column="8" Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ProjectOverviewViewModel)DataContext).EditConfigurationCommand}"
                                                            CommandParameter="{Binding}"
                                                            Padding="8,3"/>
                                                    <Button Grid.Column="9" Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}"
                                                            Command="{Binding $parent[ItemsControl].((vm:ProjectOverviewViewModel)DataContext).DeleteConfigurationCommand}"
                                                            CommandParameter="{Binding}"
                                                            Padding="8,3" Foreground="#F44336"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>

                        <TextBlock Text="{Binding NoConfigurations, Source={x:Static loc:Strings.Instance}}"
                                   IsVisible="{Binding !HasConfigurations}"
                                   Opacity="0.5" FontStyle="Italic" Margin="10,5"/>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                        CornerRadius="8" Padding="20">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                        <Button Content="{Binding CalculateAll, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding CalculateAllCommand}"
                                IsEnabled="{Binding CanCalculate}"
                                Background="#2196F3" Foreground="White"
                                Padding="30,15" FontSize="16"/>
                        <Button Content="{Binding ExportReport, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ExportReportCommand}"
                                IsEnabled="{Binding HasResults}"
                                Background="#4CAF50" Foreground="White"
                                Padding="30,15" FontSize="16"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding StatusMessage}"/>
                <TextBlock Grid.Column="1" Text="{Binding LanguageDisplay}" Opacity="0.6"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
