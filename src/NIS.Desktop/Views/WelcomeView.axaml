<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.ViewModels"
             xmlns:loc="using:NIS.Desktop.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="550"
             x:Class="NIS.Desktop.Views.WelcomeView"
             x:DataType="vm:WelcomeViewModel">

    <Design.DataContext>
        <vm:WelcomeViewModel/>
    </Design.DataContext>

    <UserControl.Resources>
        <vm:EqualsConverter x:Key="EqualsConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40,30" Spacing="24" MaxWidth="500" HorizontalAlignment="Center">

            <!-- Title Section -->
            <StackPanel Spacing="4">
                <TextBlock Text="{Binding Strings.AppTitle}"
                           FontSize="28" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding Strings.AppSubtitle}"
                           FontSize="14" Opacity="0.6"/>
            </StackPanel>

            <!-- Current Project Card -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4" Padding="16"
                    IsVisible="{Binding HasCurrentProject}">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Strings.Project}" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <Button Command="{Binding ContinueProjectCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Classes="accent"
                            Padding="12,8">
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentProjectName}" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding Strings.Continue}" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Get Started hint when no project -->
            <TextBlock Text="{Binding Strings.GetStarted}"
                       FontSize="13" Opacity="0.6"
                       HorizontalAlignment="Center"
                       IsVisible="{Binding !HasCurrentProject}"/>

            <!-- Language and Theme -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4" Padding="16">
                <Grid ColumnDefinitions="Auto,8,Auto,24,Auto,8,Auto" VerticalAlignment="Center">
                    <!-- Language Selection -->
                    <TextBlock Grid.Column="0" Text="{Binding Strings.SelectLanguage}" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="2" SelectedIndex="{Binding SelectedLanguageIndex, Mode=TwoWay}" Width="120" VerticalAlignment="Center">
                        <ComboBoxItem Content="{Binding LanguageGerman, Source={x:Static loc:Strings.Instance}}"/>
                        <ComboBoxItem Content="{Binding LanguageFrench, Source={x:Static loc:Strings.Instance}}"/>
                        <ComboBoxItem Content="{Binding LanguageItalian, Source={x:Static loc:Strings.Instance}}"/>
                        <ComboBoxItem Content="{Binding LanguageEnglish, Source={x:Static loc:Strings.Instance}}"/>
                    </ComboBox>

                    <!-- Theme Toggle -->
                    <TextBlock Grid.Column="4" Text="{Binding Strings.Theme}" VerticalAlignment="Center"/>
                    <ToggleSwitch Grid.Column="6" IsChecked="{Binding IsDarkMode}"
                                  OnContent="{Binding Strings.ThemeDark}"
                                  OffContent="{Binding Strings.ThemeLight}"
                                  VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Projects in Database -->
            <Border Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    CornerRadius="4" Padding="16">
                <StackPanel Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="{Binding Project, Source={x:Static loc:Strings.Instance}}"
                                   FontSize="14" FontWeight="SemiBold"/>
                        <Button Grid.Column="1"
                                Command="{Binding LoadDemoProjectCommand}"
                                Content="{Binding LoadDemoProject, Source={x:Static loc:Strings.Instance}}"
                                Padding="8,4" FontSize="12"/>
                    </Grid>

                    <!-- Project List -->
                    <ItemsControl ItemsSource="{Binding ProjectList}" IsVisible="{Binding HasProjectsInDatabase}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,2" Padding="8,6" CornerRadius="4"
                                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                                    <Grid ColumnDefinitions="*,Auto,Auto">
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ModifiedAt}" FontSize="11" Opacity="0.6"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Command="{Binding $parent[ItemsControl].((vm:WelcomeViewModel)DataContext).OpenProjectFromListCommand}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding OpenProject, Source={x:Static loc:Strings.Instance}}"
                                                Classes="accent"
                                                Padding="8,4" FontSize="11" Margin="0,0,8,0"/>
                                        <Button Grid.Column="2"
                                                Command="{Binding $parent[ItemsControl].((vm:WelcomeViewModel)DataContext).DeleteProjectFromListCommand}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}"
                                                Padding="8,4" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="{Binding LoadDemoProjectDesc, Source={x:Static loc:Strings.Instance}}"
                               FontSize="12" Opacity="0.6"
                               IsVisible="{Binding !HasProjectsInDatabase}"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12" Opacity="0.8"
                       HorizontalAlignment="Center"
                       IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

            <!-- Footer -->
            <TextBlock Text="{Binding Strings.NisvCompliance}"
                       FontSize="11" Opacity="0.5"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

