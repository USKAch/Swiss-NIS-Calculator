<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Custom brushes for Swiss NIS Calculator
    FluentAvalonia provides semantic brushes for most uses:
    - Text: TextFillColorPrimary, TextFillColorSecondary, TextFillColorTertiary
    - Backgrounds: CardBackgroundFillColorDefault, LayerFillColorDefault
    - Status: SystemFillColorSuccess, SystemFillColorCaution, SystemFillColorCritical

    This file defines only the custom brushes we need beyond FluentAvalonia's defaults.
    -->

    <ResourceDictionary.ThemeDictionaries>
        <!-- Light Theme -->
        <ResourceDictionary x:Key="Light">
            <!-- Sidebar -->
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1E3A5F"/>

            <!-- Headers - keep a single accent family for consistency -->
            <SolidColorBrush x:Key="HeaderSecondaryBrush" Color="{DynamicResource SystemAccentColorLight2}"/>
            <SolidColorBrush x:Key="HeaderTertiaryBrush" Color="{DynamicResource SystemAccentColorLight1}"/>
            <SolidColorBrush x:Key="HeaderPrimaryBrush" Color="{DynamicResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="HeaderSubtitleBrush" Color="#BBDEFB"/>

            <!-- Action buttons with white text -->
            <SolidColorBrush x:Key="SuccessButtonBrush" Color="#2E7D32"/>
            <SolidColorBrush x:Key="WarningButtonBrush" Color="#E65100"/>
            <SolidColorBrush x:Key="DangerButtonBrush" Color="#C62828"/>
            <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{DynamicResource SystemAccentColor}"/>

            <!-- Dirty indicator -->
            <SolidColorBrush x:Key="DirtyIndicatorBrush" Color="#F59E0B"/>

            <!-- Panels -->
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#F3F4F6"/>
            <SolidColorBrush x:Key="SubtleTextBrush" Color="#6B7280"/>
        </ResourceDictionary>

        <!-- Dark Theme -->
        <ResourceDictionary x:Key="Dark">
            <!-- Sidebar - slightly lighter in dark mode -->
            <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1E3A5F"/>

            <!-- Headers -->
            <SolidColorBrush x:Key="HeaderSecondaryBrush" Color="{DynamicResource SystemAccentColorDark1}"/>
            <SolidColorBrush x:Key="HeaderTertiaryBrush" Color="{DynamicResource SystemAccentColorDark2}"/>
            <SolidColorBrush x:Key="HeaderPrimaryBrush" Color="{DynamicResource SystemAccentColor}"/>
            <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="HeaderSubtitleBrush" Color="#90CAF9"/>

            <!-- Action buttons - adjusted for dark theme -->
            <SolidColorBrush x:Key="SuccessButtonBrush" Color="#388E3C"/>
            <SolidColorBrush x:Key="WarningButtonBrush" Color="#F57C00"/>
            <SolidColorBrush x:Key="DangerButtonBrush" Color="#D32F2F"/>
            <SolidColorBrush x:Key="PrimaryButtonBrush" Color="{DynamicResource SystemAccentColor}"/>

            <!-- Dirty indicator -->
            <SolidColorBrush x:Key="DirtyIndicatorBrush" Color="#F59E0B"/>

            <!-- Panels -->
            <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1C1C1C"/>
            <SolidColorBrush x:Key="SubtleTextBrush" Color="#A3A3A3"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
