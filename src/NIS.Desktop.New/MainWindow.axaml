<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:loc="using:NIS.Desktop.Localization"
        xmlns:vm="using:NIS.Desktop.ViewModels"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="NIS.Desktop.MainWindow"
        x:DataType="vm:MainShellViewModel"
        Title="{Binding WindowTitle}"
        Width="1400" Height="880"
        MinWidth="1330" MinHeight="560">

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}"/>
    </Window.KeyBindings>

    <ui:NavigationView x:Name="NavView"
                       PaneDisplayMode="Left"
                       IsSettingsVisible="False"
                       IsPaneOpen="True"
                       OpenPaneLength="160"
                       SelectionChanged="OnNavigationSelectionChanged">

        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="{Binding Home, Source={x:Static loc:Strings.Instance}}" Tag="Home">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Home"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding File, Source={x:Static loc:Strings.Instance}}" Tag="File">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Document"/>
                </ui:NavigationViewItem.IconSource>
                <ui:NavigationViewItem.MenuItems>
                    <ui:NavigationViewItem Content="{Binding NewProject, Source={x:Static loc:Strings.Instance}}" Tag="NewProject"/>
                    <ui:NavigationViewItem Content="{Binding OpenProject, Source={x:Static loc:Strings.Instance}}" Tag="OpenProject"/>
                    <ui:NavigationViewItem Content="{Binding Save, Source={x:Static loc:Strings.Instance}}" Tag="Save"/>
                    <ui:NavigationViewItem Content="{Binding SaveAs, Source={x:Static loc:Strings.Instance}}" Tag="SaveAs"/>
                    <ui:NavigationViewItem Content="{Binding RecentProjects, Source={x:Static loc:Strings.Instance}}" Tag="RecentProjects"/>
                </ui:NavigationViewItem.MenuItems>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding Project, Source={x:Static loc:Strings.Instance}}" Tag="Project" IsEnabled="{Binding HasProject}">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Document"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>

            <ui:NavigationViewItem Content="{Binding MasterData, Source={x:Static loc:Strings.Instance}}" Tag="MasterData">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Library"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.MenuItems>

        <ui:NavigationView.FooterMenuItems>
            <ui:NavigationViewItem Content="{Binding Settings, Source={x:Static loc:Strings.Instance}}" Tag="Settings">
                <ui:NavigationViewItem.IconSource>
                    <ui:SymbolIconSource Symbol="Setting"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.FooterMenuItems>

        <!-- Content area -->
        <ContentControl Content="{Binding CurrentView}" Margin="10"/>

    </ui:NavigationView>
</Window>
