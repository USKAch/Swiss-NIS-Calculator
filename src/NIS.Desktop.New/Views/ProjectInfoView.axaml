<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.New.ViewModels"
             xmlns:loc="using:NIS.Desktop.New.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="550"
             x:Class="NIS.Desktop.New.Views.ProjectInfoView"
             x:DataType="vm:ProjectInfoViewModel">

    <Design.DataContext>
        <vm:ProjectInfoViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource HeaderPrimaryBrush}"
                BorderThickness="0,0,0,2"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="{Binding TitleLabel}"
                           FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="{Binding LanguageDisplayName}"
                           FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,3,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Callsign -->
                <StackPanel Spacing="5">
                    <TextBlock Text="{Binding CallsignLabel}" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Callsign}" Watermark="{Binding CallsignExample, Source={x:Static loc:Strings.Instance}}"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Spacing="5">
                    <TextBlock Text="{Binding AddressLabel}" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Address}" Watermark="{Binding AddressExample, Source={x:Static loc:Strings.Instance}}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="{Binding CancelButtonLabel}"
                        Command="{Binding CancelCommand}"
                        Padding="20,10"/>
                <Button Content="{Binding CreateButtonLabel}"
                        Command="{Binding CreateCommand}"
                        Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}"
                        Padding="20,10"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

