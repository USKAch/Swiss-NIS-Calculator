<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:vm="using:NIS.Desktop.New.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
             x:Class="NIS.Desktop.New.Views.HomeView"
             x:DataType="vm:HomeViewModel">

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="20" MaxWidth="600" HorizontalAlignment="Center">

            <!-- Welcome Header -->
            <StackPanel Spacing="8" Margin="0,20,0,10">
                <TextBlock Text="{Binding Loc[Home.Welcome]}"
                           FontSize="36" FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Loc[Home.Subtitle]}"
                           FontSize="14"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Action Cards -->
            <ui:SettingsExpander Header="{Binding Loc[Home.NewProject]}"
                                 Description="{Binding Loc[Home.NewProject.Description]}"
                                 IconSource="Add"
                                 IsClickEnabled="True"
                                 ActionIconSource="ChevronRight"
                                 Command="{Binding NewProjectCommand}"/>

            <ui:SettingsExpander Header="{Binding Loc[Home.OpenProject]}"
                                 Description="{Binding Loc[Home.OpenProject.Description]}"
                                 IconSource="OpenFolder"
                                 IsClickEnabled="True"
                                 ActionIconSource="ChevronRight"
                                 Command="{Binding OpenProjectCommand}"/>

            <!-- Recent Projects -->
            <ui:SettingsExpander Header="{Binding Loc[Home.RecentProjects]}"
                                 Description="{Binding Loc[Home.RecentProjects.Empty]}"
                                 IconSource="Clock"
                                 IsExpanded="False">
                <ui:SettingsExpander.Items>
                    <ui:SettingsExpanderItem Content="{Binding Loc[Home.RecentProjects.Empty]}"/>
                </ui:SettingsExpander.Items>
            </ui:SettingsExpander>

            <!-- Info Card -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,10,0,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Loc[Home.About.Title]}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Loc[Home.About.Text]}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
