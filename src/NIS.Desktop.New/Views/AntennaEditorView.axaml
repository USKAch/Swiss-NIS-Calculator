<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.New.ViewModels"
             xmlns:loc="using:NIS.Desktop.New.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
             x:Class="NIS.Desktop.New.Views.AntennaEditorView"
             x:DataType="vm:AntennaEditorViewModel">

    <Design.DataContext>
        <vm:AntennaEditorViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource HeaderPrimaryBrush}"
                BorderThickness="0,0,0,2"
                Padding="20,15">
            <TextBlock Text="{Binding SelectAntennaPrompt, Source={x:Static loc:Strings.Instance}}"
                       FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
        </Border>

        <!-- Antenna Selection -->
        <Border Grid.Row="1" Margin="15" Background="{DynamicResource CardBackgroundFillColorDefault}" CornerRadius="4" Padding="20">
            <StackPanel Spacing="15">
                <TextBlock Text="{Binding TypeToSearchDescription, Source={x:Static loc:Strings.Instance}}" Opacity="0.6"/>
                <AutoCompleteBox ItemsSource="{Binding FilteredAntennas}"
                                 FilterMode="Contains"
                                 Watermark="{Binding TypeToSearch, Source={x:Static loc:Strings.Instance}}"
                                 MinimumPrefixLength="0"
                                 IsTextCompletionEnabled="True"
                                 SelectedItem="{Binding SelectedAntenna}"
                                 ValueMemberBinding="{Binding DisplayName}"
                                 Padding="10,8"
                                 FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20,15">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Add New button -->
                <Button Content="{Binding AddNewAntenna, Source={x:Static loc:Strings.Instance}}"
                        Command="{Binding StartAddNewCommand}"
                        Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,10"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Content="{Binding Cancel, Source={x:Static loc:Strings.Instance}}" Command="{Binding CancelCommand}" Padding="20,10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
