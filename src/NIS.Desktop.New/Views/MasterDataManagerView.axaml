<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NIS.Desktop.New.ViewModels"
             xmlns:loc="using:NIS.Desktop.New.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="NIS.Desktop.New.Views.MasterDataManagerView"
             x:DataType="vm:MasterDataManagerViewModel">

    <Design.DataContext>
        <vm:MasterDataManagerViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderBrush="{DynamicResource HeaderSecondaryBrush}"
                BorderThickness="0,0,0,2"
                Padding="20,15">
            <TextBlock Text="{Binding MasterDataManager, Source={x:Static loc:Strings.Instance}}" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex}" Margin="20">

            <!-- Antennas Tab -->
            <TabItem Header="{Binding Antennas, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding AntennaSearchText}"
                                 Watermark="{Binding SearchAntennas, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearAntennaSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="AntennasListBox"
                                 ItemsSource="{Binding FilteredAntennas}"
                                 SelectedItem="{Binding SelectedAntenna}"
                                 DoubleTapped="OnAntennaDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel>
                                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="14"/>
                                                <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,3,0,0">
                                                    <TextBlock Opacity="0.6" FontSize="12">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0} bands">
                                                                <Binding Path="Bands.Count"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding IsRotatable, StringFormat='Rotatable: {0}'}"
                                                               Opacity="0.6" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <ItemsControl ItemsSource="{Binding Bands}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="5"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="3" Padding="6,2">
                                                                <TextBlock FontSize="11" Foreground="{DynamicResource PrimaryButtonBrush}">
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="{}{0}MHz">
                                                                            <Binding Path="FrequencyMHz"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddAntennaButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddAntennaCommand}"
                                Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditAntennaCommand}"
                                IsEnabled="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8"/>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteAntennaCommand}"
                                IsEnabled="{Binding SelectedAntenna, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Cables Tab -->
            <TabItem Header="{Binding Cables, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding CableSearchText}"
                                 Watermark="{Binding SearchCables, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearCableSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="CablesListBox"
                                 ItemsSource="{Binding FilteredCables}"
                                 SelectedItem="{Binding SelectedCable}"
                                 DoubleTapped="OnCableDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="1" Opacity="0.6" FontSize="12" VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} frequency points">
                                                        <Binding Path="AttenuationPer100m.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddCableButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddCableCommand}"
                                Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditCableCommand}"
                                IsEnabled="{Binding SelectedCable, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8"/>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteCableCommand}"
                                IsEnabled="{Binding SelectedCable, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Radios Tab -->
            <TabItem Header="{Binding Radios, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding RadioSearchText}"
                                 Watermark="{Binding SearchRadios, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearRadioSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="RadiosListBox"
                                 ItemsSource="{Binding FilteredRadios}"
                                 SelectedItem="{Binding SelectedRadio}"
                                 DoubleTapped="OnRadioDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel>
                                                <TextBlock FontWeight="SemiBold" FontSize="14">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding Path="Manufacturer"/>
                                                            <Binding Path="Model"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Opacity="0.6" FontSize="12" VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}W max">
                                                        <Binding Path="MaxPowerWatts"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddRadioButton, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddRadioCommand}"
                                Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditRadioCommand}"
                                IsEnabled="{Binding SelectedRadio, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8"/>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteRadioCommand}"
                                IsEnabled="{Binding SelectedRadio, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- OKA Tab -->
            <TabItem Header="OKA">
                <Grid RowDefinitions="Auto,*,Auto" Margin="0,10,0,0">
                    <!-- Search -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding OkaSearchText}"
                                 Watermark="{Binding SearchOkas, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearOkaSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                    </Grid>

                    <!-- List -->
                    <Border Grid.Row="1" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <ListBox x:Name="OkasListBox"
                                 ItemsSource="{Binding FilteredOkas}"
                                 SelectedItem="{Binding SelectedOka}"
                                 DoubleTapped="OnOkaDoubleTapped"
                                 Padding="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                                        <Grid ColumnDefinitions="50,*,Auto">
                                            <TextBlock Text="{Binding Id, StringFormat='{}{0}.'}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Grid.Column="2" Opacity="0.6" FontSize="12" VerticalAlignment="Center"
                                                       Text="{Binding DefaultDampingDb, StringFormat='{}{0} dB'}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding AddOka, Source={x:Static loc:Strings.Instance}}" Command="{Binding AddOkaCommand}"
                                Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Content="{Binding Edit, Source={x:Static loc:Strings.Instance}}" Command="{Binding EditOkaCommand}"
                                IsEnabled="{Binding SelectedOka, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Padding="15,8"/>
                        <Button Content="{Binding Delete, Source={x:Static loc:Strings.Instance}}" Command="{Binding DeleteOkaCommand}"
                                IsEnabled="{Binding SelectedOka, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Foreground="{DynamicResource DangerButtonBrush}" Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Translations Tab -->
            <TabItem Header="{Binding Translations, Source={x:Static loc:Strings.Instance}}">
                <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="0,10,0,0" DataContext="{Binding TranslationEditor}">
                    <!-- Search and Filter -->
                    <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,10">
                        <TextBox Text="{Binding SearchText}"
                                 Watermark="{Binding SearchTranslations, Source={x:Static loc:Strings.Instance}}"
                                 Padding="10,8"/>
                        <Button Grid.Column="1" Content="{Binding Clear, Source={x:Static loc:Strings.Instance}}"
                                Command="{Binding ClearSearchCommand}"
                                Margin="10,0,0,0" Padding="15,8"/>
                        <ComboBox Grid.Column="2" ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Margin="10,0,0,0" MinWidth="150"/>
                    </Grid>

                    <!-- Info banner -->
                    <Border Grid.Row="1" Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="4" Padding="12,8" Margin="0,0,0,10">
                        <TextBlock Text="{Binding TranslationEditorInfo, Source={x:Static loc:Strings.Instance}}"
                                   Foreground="{DynamicResource PrimaryButtonBrush}" FontSize="12"/>
                    </Border>

                    <!-- Translation list -->
                    <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundAltMediumHighBrush}" CornerRadius="4" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}" BorderThickness="1">
                        <DataGrid ItemsSource="{Binding FilteredTranslations}"
                                  SelectedItem="{Binding SelectedItem}"
                                  AutoGenerateColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserReorderColumns="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{Binding ColumnKey, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Key}" IsReadOnly="True" Width="150"/>
                                <DataGridTextColumn Header="{Binding ColumnCategory, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Category}" IsReadOnly="True" Width="100"/>
                                <DataGridTextColumn Header="{Binding ColumnGerman, Source={x:Static loc:Strings.Instance}}" Binding="{Binding German}" Width="*"/>
                                <DataGridTextColumn Header="{Binding ColumnFrench, Source={x:Static loc:Strings.Instance}}" Binding="{Binding French}" Width="*"/>
                                <DataGridTextColumn Header="{Binding ColumnItalian, Source={x:Static loc:Strings.Instance}}" Binding="{Binding Italian}" Width="*"/>
                                <DataGridTextColumn Header="{Binding ColumnEnglish, Source={x:Static loc:Strings.Instance}}" Binding="{Binding English}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Status message -->
                    <TextBlock Grid.Row="3" Text="{Binding StatusMessage}" Margin="0,10,0,0"
                               Opacity="0.6" FontSize="12"
                               IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                    <!-- Action buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                        <Button Content="{Binding SaveChanges, Source={x:Static loc:Strings.Instance}}" Command="{Binding SaveTranslationsCommand}"
                                Background="{DynamicResource SuccessButtonBrush}" Foreground="{DynamicResource HeaderForegroundBrush}" Padding="15,8"/>
                        <Button Content="{Binding Cancel, Source={x:Static loc:Strings.Instance}}" Command="{Binding CancelChangesCommand}"
                                Padding="15,8"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20,15">
            <Button Content="{Binding Back, Source={x:Static loc:Strings.Instance}}" Command="{Binding BackCommand}" Padding="20,10"/>
        </Border>
    </Grid>
</UserControl>

